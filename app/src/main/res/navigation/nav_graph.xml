<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.samuelnunes.toodoocats.presentation.screens.cats_list.CatsListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/action_FirstFragment_to_nav_login_activity"
            app:destination="@id/nav_login_activity" />
    </fragment>

    <activity
        android:id="@+id/nav_login_activity"
        app:action="android.intent.action.VIEW"
        app:dataPattern="https://en.wikipedia.org/wiki/{cat}">
        <argument
            android:name="cat"
            app:argType="string"
            app:nullable="false"/>
    </activity>

</navigation>